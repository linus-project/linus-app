<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.linusapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/linus_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/linus_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LinusApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Distribuicao"
            android:exported="true"></activity>
        <activity
            android:name=".TelaConteudoTexto"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".PrincipalActivity"
            android:exported="true"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.LinusApp.NoActionBar"></activity>
        <activity
            android:name=".News"
            android:exported="true"></activity>
        <activity
            android:name=".Onboarding"
            android:exported="true" />
        <activity
            android:name=".ActivityConteudoPorNivel"
            android:exported="true">
        </activity>
        <activity
            android:name=".Cadastro"
            android:exported="true" />
        <activity
            android:name=".Login"
            android:exported="true" />
        <activity
            android:name=".ConteudoFavoritado"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VistoPorUltimo"
            android:exported="true" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>