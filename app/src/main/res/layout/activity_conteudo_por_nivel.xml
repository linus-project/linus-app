<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bg_color_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityConteudoPorNivel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="73dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/logo1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Distribuições"
                android:textColor="@color/green_water"
                android:textSize="40sp"
                android:fontFamily="@font/montserrat_semibold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciante"
                android:textSize="20sp"
                android:textColor="@color/green_water"
                android:layout_margin="25dp"
                android:fontFamily="@font/montserrat_semibold"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="@string/renda_fixa"
                        android:textColor="@color/verde"
                        android:textSize="25sp"
                        android:backgroundTint="@color/verde_claro"
                        android:layout_margin="1dp"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="@string/renda_fixa"
                        android:textColor="@color/verde"
                        android:textSize="25sp"
                        android:backgroundTint="@color/verde_claro"
                        android:layout_margin="1dp"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="@string/renda_fixa"
                        android:textColor="@color/verde"
                        android:textSize="25sp"
                        android:backgroundTint="@color/verde_claro"
                        android:layout_margin="1dp"/>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediário"
                    android:textSize="20sp"
                    android:textColor="@color/green_water"
                    android:layout_margin="25dp"
                    android:fontFamily="@font/montserrat_semibold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="@string/renda_fixa"
                            android:textColor="@color/verde"
                            android:textSize="25sp"
                            android:backgroundTint="@color/verde_claro"
                            android:layout_margin="1dp"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="@string/renda_fixa"
                            android:textColor="@color/verde"
                            android:textSize="25sp"
                            android:backgroundTint="@color/verde_claro"
                            android:layout_margin="1dp"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="@string/renda_fixa"
                            android:textColor="@color/verde"
                            android:textSize="25sp"
                            android:backgroundTint="@color/verde_claro"
                            android:layout_margin="1dp"/>

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avançado"
                    android:textSize="20sp"
                    android:textColor="@color/green_water"
                    android:layout_margin="25dp"
                    android:fontFamily="@font/montserrat_semibold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="@string/renda_fixa"
                            android:textColor="@color/verde"
                            android:textSize="25sp"
                            android:backgroundTint="@color/verde_claro"
                            android:layout_margin="1dp"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="@string/renda_fixa"
                            android:textColor="@color/verde"
                            android:textSize="25sp"
                            android:backgroundTint="@color/verde_claro"
                            android:layout_margin="1dp"/>

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="@string/renda_fixa"
                            android:textColor="@color/verde"
                            android:textSize="25sp"
                            android:backgroundTint="@color/verde_claro"
                            android:layout_margin="1dp"/>

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>